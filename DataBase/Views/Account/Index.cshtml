@model IEnumerable<DataBase_Website.Models.DataBaseModels.AccountModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PrivateAccountKey">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PrivateAccountKey">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PrivateAccountKey">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
